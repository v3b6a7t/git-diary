{
  "name": "pamietnik",
  "version": "0.0.1",
  "private": true,
  "description": "PamiÄ™tnik w wersji git",
  "main": "src/index.js",
  "scripts": {
    "ver": "git --version",
    "add": "git add .",
    "postadd": "git status",
    "commit": "git commit -m \"[ID:`git rev-list --branches --count`] `date -I'hours'`\"; exit 1",
    "postcommit": "git log --oneline -3",
    "status": "export GIT_STATUS=`git status | grep 'Changes to be committed' --count`",
    "poststatus": "if [$GIT_STATUS -gt 0]; then git status fi",
    "test": "mocha -r ts-node/register **/*.spec.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
